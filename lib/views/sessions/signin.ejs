<div class="container">

  <h2>Sign In</h2>

  <%- messages() %>

  <form action="/sessions/signin" method="post">
    <p>Username</p>
    <input type="string" name="username" placeholder="username" autofocus />
  
    <p>Password</p>
    <input type="password" name="pass"  placeholder="password" />
  
    <br /><br />
  
    <input type="submit" value="Sign In" class="btn primary" />
  
  </form>

  <p>You don't have an account yet ? <a href="/sessions/signup" class="btn">Create a new account</a></p>

</div>